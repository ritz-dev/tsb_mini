<manifest xmlns:android="http://schemas.android.com/apk/res/android" package="com.example.tsb_mini">

    <!-- Add this line to allow camera access -->
    <uses-permission android:name="android.permission.CAMERA" />

    <application android:label="tsb_mini" android:name="${applicationName}" android:icon="@mipmap/ic_launcher">

        <activity android:name=".MainActivity" android:exported="true" android:launchMode="singleTop" android:taskAffinity="" android:theme="@style/LaunchTheme" android:configChanges="orientation|keyboardHidden|keyboard|screenSize|smallestScreenSize|locale|layoutDirection|fontScale|screenLayout|density|uiMode" android:hardwareAccelerated="true" android:windowSoftInputMode="adjustResize">

            <!-- Theme shown before Flutter UI loads -->
            <meta-data android:name="io.flutter.embedding.android.NormalTheme" android:resource="@style/NormalTheme" />

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <!-- Flutter auto-generated plugin metadata -->
        <meta-data android:name="flutterEmbedding" android:value="2" />
    </application>

    <!-- Flutter text processing query (keep as-is) -->
    <queries>
        <intent>
            <action android:name="android.intent.action.PROCESS_TEXT" />
            <data android:mimeType="text/plain" />
        </intent>
    </queries>
</manifest>
